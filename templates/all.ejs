<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Links</title>
    <link rel="stylesheet" href="./style.css">
</head>

<body>

    <h1>Links</h1>
    <a href="/add">Adicionar Link</a>

    <%for (let i=0; i<links.length; i++){%>

        <div id="<%=links[i]._id%> ">

            <form method="POST" action="/<%=links[i]._id%>?_method=DELETE">

                <h2 class="teste">
                    Título: <%= links[i].title %>
                </h2>
                <div class="teste1">
                    Descrição: <%=links[i].description%>
                </div>
                <div class="teste1">
                    URL: <%=links[i].url%>
                </div>
                <div class="teste1">
                    ID: <%=links[i]._id%>
                </div>
                <div class="teste1">
                    Clicks: <%=links[i].click%>
                </div>
                <button type="submit">Deletar</button>

                <a href="/edit/<%=links[i]._id%>">Editar Link</a>
            </form>
        </div>

        <% } %>

            <script>
                function deleteLink(id) {

                    fetch('/' + id, { method: 'DELETE' }).then(res => {
                        if (res.status === 200) {
                            res.text().then(linkId => {
                                console.log(linkId)
                                document.getElementById(linkId).remove();
                            })
                        } else {
                            res.json().then(erro => {
                                alert(erro.message)
                            })
                        }
                    })

                    window.location.reload()
                }
            </script>

</body>

</html>